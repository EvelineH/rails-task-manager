<h1>My tasks</h1>

<div>
  <% @tasks.each do |task| %>
    <input type="checkbox" title="<%= task.title.downcase %>"/>
    <label for="<%= task.title.downcase %>"><%= link_to task.title, task_path(task) %></></label>
    <%= link_to "Delete",
    task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  <% end %>
</div>

<p><%= link_to 'Add new', tasks_new_path %></p>
